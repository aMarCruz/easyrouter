{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--no-timeouts",
        "--colors",
        "${workspaceFolder}/test/index.js"
      ],
      "preLaunchTask": "npm: pretest",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
