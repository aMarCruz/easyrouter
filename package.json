{
  "name": "easyrouter",
  "version": "0.3.0",
  "description": "Tiny, fast, easy, yet powerful hash router in JavaScript",
  "main": "dist/easyrouter.js",
  "module": "dist/easyrouter.es.js",
  "jsnext:main": "dist/easyrouter.es.js",
  "browser": "dist/easyrouter.umd.js",
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "lint": "eslint src",
    "pretest": "rollup --environment BUILD:test -c -m -f cjs -o dist/easyrouter.js",
    "test": "mocha",
    "prebuild": "rm -rf dist/*",
    "build": "npm run build:cjs && npm run build:es6 && npm run build:umd && npm run min",
    "build:cjs": "rollup -c -f cjs -o dist/easyrouter.js",
    "build:es6": "rollup -c -f es -o dist/easyrouter.es.js",
    "build:umd": "rollup -c -f umd -n router -o dist/easyrouter.umd.js",
    "prepublish": "npm run lint && npm test && npm run build",
    "min": "uglifyjs ./dist/easyrouter.umd.js -m -c -o ./easyrouter.min.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aMarCruz/easyrouter.git"
  },
  "keywords": [
    "html5",
    "router",
    "javascript",
    "location",
    "hash"
  ],
  "author": {
    "name": "aMarCruz",
    "email": "amarcruzbox-git@yahoo.com",
    "url": "https://github.com/aMarCruz"
  },
  "license": "MIT",
  "homepage": "https://github.com/aMarCruz/easyrouter#readme",
  "bugs": {
    "url": "https://github.com/aMarCruz/easyrouter/issues"
  },
  "devDependencies": {
    "buble": "*",
    "eslint": "^3.x",
    "expect": "*",
    "mocha": "*",
    "rollup": "*",
    "rollup-plugin-buble": "*",
    "rollup-plugin-jscc": "*",
    "uglify-js": "^2.x"
  }
}
