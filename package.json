{
  "name": "easyrouter",
  "version": "1.0.0",
  "description": "Tiny, fast, easy, yet powerful hash router in JavaScript",
  "main": "dist/easyrouter.js",
  "module": "dist/easyrouter.es.js",
  "jsnext:main": "dist/easyrouter.es.js",
  "browser": "dist/easyrouter.umd.js",
  "engines": {
    "node": ">=4.2"
  },
  "scripts": {
    "lint": "eslint test/*.js",
    "pretest": "tsc && rollup --environment BUILD:test -c -m -f cjs -o dist/easyrouter.js",
    "test": "nyc mocha test/index.js",
    "coverage": "nyc report -r=lcov",
    "prebuild": "rimraf -rf ./dist/**",
    "build": "tsc -p tsconfig-p.json && rollup -c && npm run min",
    "prepublish": "npm run lint && npm test && npm run build",
    "min": "uglifyjs ./dist/easyrouter.umd.js -m -c -o ./easyrouter.min.js"
  },
  "files": [
    "dist",
    "src",
    "easyrouter.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aMarCruz/easyrouter.git"
  },
  "keywords": [
    "html5",
    "router",
    "routes",
    "javascript",
    "typescript",
    "location",
    "hash"
  ],
  "author": {
    "name": "aMarCruz",
    "email": "amarcruzbox-git@yahoo.com",
    "url": "https://github.com/aMarCruz"
  },
  "license": "MIT",
  "homepage": "https://github.com/aMarCruz/easyrouter#readme",
  "bugs": {
    "url": "https://github.com/aMarCruz/easyrouter/issues"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "eslint": "^5.10.0",
    "expect": "1.20.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-jscc": "^1.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "uglify-js": "^3.4.0"
  }
}
