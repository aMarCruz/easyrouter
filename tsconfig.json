{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2015", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": false,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "es5",
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "test/k*.js"
  ]
}
